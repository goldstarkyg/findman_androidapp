<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:background="#6ccff6"
    android:id="@+id/background"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_above="@+id/layoutMain"
        android:paddingTop="30dp"
        >
        <TextView
            android:id="@+id/title"
            android:text="Reset Password"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fillViewport="true"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:paddingTop="30dp">
            <LinearLayout
                android:id="@+id/lay_edt_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/editPwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:hint="New Password"
                    android:textColorHint="#000000"
                    android:inputType="textPassword"
                    android:textSize="16sp"
                    android:textColor="#FF444444"
                    android:padding="8dp"
                    android:singleLine="true"/>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/theme_primary"/>

            </LinearLayout>
            <TextView
                android:id="@+id/txt_caution"
                android:text="Does not match with password"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:visibility="invisible"
                />
            <LinearLayout
                android:id="@+id/lay_edit_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/editPwdConfirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:hint="Confirm Password"
                    android:textColorHint="#000000"
                    android:inputType="textPassword"
                    android:textSize="16sp"
                    android:textColor="#FF444444"
                    android:padding="8dp"
                    android:singleLine="true"/>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/theme_primary"/>

            </LinearLayout>


            <TextView
                android:id="@+id/txtBtnReset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lbbutton"
                android:text="@string/btn_send_uppercase"
                android:textColor="#FFFFFFFF"
                android:gravity="center"
                android:textSize="18sp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="6dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="40dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutMain"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:visibility="invisible"
                >
                <TextView
                    android:id="@+id/txtBtnLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_gray"
                    android:shadowColor="#66000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="@string/btn_login"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/txtBtnSignup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_gray"
                    android:shadowColor="#66000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="@string/btn_signup"
                    android:layout_alignParentRight="true"
                    android:textSize="16sp"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
