<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:background="#6ccff6"
    android:id="@+id/background"
    >
    <ScrollView
        android:id="@+id/layoutLoginMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fillViewport="true"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="16dp"
                android:paddingTop="5dp"
                >
                <EditText
                    android:id="@+id/editEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00b9ebf6"
                    android:hint="@string/lbl_username_email"
                    android:textColorHint="#332f2f"
                    android:inputType="textEmailAddress"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:padding="8dp"
                    android:singleLine="true" />
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#ea0d73e4"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="16dp"
                android:layout_marginTop="12dp"
                >
                <EditText
                    android:id="@+id/editPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:hint="@string/lbl_password"
                    android:textColorHint="#332f2f"
                    android:inputType="textPassword"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:padding="8dp"
                    android:singleLine="true"/>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#ea0d73e4"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="15dp"
                android:layout_marginTop="40dp"
                >
                <TextView
                    android:id="@+id/txtBtnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lbbutton"
                    android:text="@string/btn_login_uppercase"
                    android:textColor="#FFFFFFFF"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="8dp"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:paddingRight="16dp"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/txtBtnForgotPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:shadowColor="#66000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="@string/btn_forgot_password"
                    android:textSize="16sp"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="50dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't have an account?"
                    android:textSize="14sp"
                    android:textColor="#332f2f"/>
                <TextView
                    android:id="@+id/txtBtnSignup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lbbutton"
                    android:shadowColor="#66000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="@string/btn_signup"
                    android:layout_alignParentRight="true"
                    android:textSize="16sp"
                    android:paddingRight="6dp"
                    android:paddingLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="here."
                    android:textSize="14sp"
                    android:textColor="#332f2f"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
