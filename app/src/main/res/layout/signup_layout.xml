<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:background="#6ccff6"
    android:id="@+id/background"
    >
    <ScrollView
        android:id="@+id/layoutLoginMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <RelativeLayout
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:layout_marginBottom="30dp"
                >
                <com.findmiin.business.local.Utility.util.CircleImageView
                    android:id="@+id/profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="0dp"
                    />
                <TextView
                    android:id="@+id/txtgallery"
                    android:text="Gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/profile"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/blue_button"
                    android:textSize="18sp"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/txtcamera"
                    android:text="Camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtgallery"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/blue_button"
                    android:textSize="18sp"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="16dp"

                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <EditText
                        android:id="@+id/editFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:hint="@string/lbl_firstname"
                        android:textColorHint="#332f2f"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:padding="8dp"
                        android:singleLine="true"/>
                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#ea0d73e4"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    >
                    <EditText
                        android:id="@+id/editLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:hint="@string/lbl_lastname"
                        android:textColorHint="#332f2f"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:padding="8dp"
                        android:singleLine="true"/>
                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#ea0d73e4"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="16dp"
                android:paddingTop="5dp"
                >
                <EditText
                    android:id="@+id/editEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:hint="@string/lbl_username_email"
                    android:textColorHint="#332f2f"
                    android:inputType="textEmailAddress"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:padding="8dp"
                    android:singleLine="true" />
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#ea0d73e4"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="16dp"
                android:layout_marginTop="12dp"
                >
                <EditText
                    android:id="@+id/editPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:hint="@string/lbl_password"
                    android:textColorHint="#332f2f"
                    android:inputType="textPassword"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:padding="8dp"
                    android:singleLine="true"/>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#ea0d73e4"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="16dp"
                android:layout_marginTop="12dp"
                >
                <EditText
                    android:id="@+id/editPwdConfirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:hint="Confirm Password"
                    android:textColorHint="#332f2f"
                    android:inputType="textPassword"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:padding="8dp"
                    android:singleLine="true"/>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#ea0d73e4"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_caution"
                android:layout_gravity="right"
                android:text="Does not match with password"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:visibility="invisible"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="0dp"
                android:layout_marginTop="40dp"
                >
                <TextView
                    android:id="@+id/txtBtnSignup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lbbutton"
                    android:text="SIGN UP"
                    android:textColor="#FFFFFFFF"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingRight="5dp"
                >
                <TextView
                    android:id="@+id/txtBtnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textColor="@color/lbbutton"
                    android:gravity="right"
                    android:textSize="18sp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="8dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>



</RelativeLayout>
