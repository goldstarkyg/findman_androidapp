<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="1dip" android:color="#a2def5" />
            <gradient android:angle="-90" android:startColor="#44a2bac2" android:endColor="#44a2bac2"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="1dip" android:color="#a2def5" />
            <solid android:color="#a2def5"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="1dip" android:color="#00f4f4f7" />
            <gradient android:angle="-90" android:startColor="#00aebdc2" android:endColor="#0051585a" />
        </shape>
    </item>
</selector>