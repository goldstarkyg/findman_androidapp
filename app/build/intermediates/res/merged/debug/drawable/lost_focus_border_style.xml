<?xml version="1.0" encoding="utf-8"?>

<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

    <!-- define border width and color -->

    <stroke
        android:width="0dp"
        android:color="#bbfaf8f8"
        />

    <!-- define corner radius -->

    <corners
        android:radius="1dp"
        />

    <!-- padding -->

    <padding
        android:bottom="2dp"
        android:left="0dp"
        android:right="0dp"
        android:top="2dp"
        />
    <gradient android:angle="90" android:startColor="#4afefcfc" android:centerColor="#711c1c1c"
        android:endColor="#3af9f5f5"/>

</shape>