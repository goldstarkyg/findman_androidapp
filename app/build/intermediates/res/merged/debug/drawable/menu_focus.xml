<?xml version="1.0" encoding="utf-8"?>

<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

    <!-- define border width and color -->
    <gradient android:angle="90" android:startColor="#a3f8f9f8" android:centerColor="#91f5f5f5"
        android:endColor="#aabcebe2"/>

    <stroke
        android:width="1dp"
        android:color="#00cc33"
        />

    <!-- define corner radius -->

    <corners
        android:radius="1dp"
        />

    <!-- padding -->

    <padding
        android:bottom="2dp"
        android:left="0dp"
        android:right="0dp"
        android:top="2dp"
        />
</shape>