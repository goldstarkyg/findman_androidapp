<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_signup"
    >


    <RelativeLayout
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="680"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        >
        <com.findmiin.business.local.Utility.util.CircleImageView
            android:id="@+id/profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="70dp"
            />
        <TextView
            android:id="@+id/txtgallery"
            android:text="Gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profile"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:background="@drawable/blue_button"
            android:textSize="18sp"
            android:padding="5dp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/txtcamera"
            android:text="Camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtgallery"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:background="@drawable/blue_button"
            android:textSize="18sp"
            android:padding="5dp"
            android:textColor="@color/white"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1480"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <EditText
                    android:id="@+id/editFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:hint="@string/lbl_firstname"
                    android:textColorHint="#FFb9b9b9"
                    android:textSize="16sp"
                    android:textColor="#FFFFFFFF"
                    android:padding="8dp"
                    android:singleLine="true"/>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#AAFFFFFF"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                >
                <EditText
                    android:id="@+id/editLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:hint="@string/lbl_lastname"
                    android:textColorHint="#FFb9b9b9"
                    android:textSize="16sp"
                    android:textColor="#FFFFFFFF"
                    android:padding="8dp"
                    android:singleLine="true"/>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#AAFFFFFF"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingRight="19dp"
            >
            <EditText
                android:id="@+id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:hint="@string/lbl_email"
                android:textColorHint="#FFb9b9b9"
                android:textSize="16sp"
                android:textColor="#FFFFFFFF"
                android:padding="8dp"
                android:singleLine="true"
                android:inputType="textEmailAddress"      />
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#AAFFFFFF"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingRight="38dp"
            >
            <EditText
                android:id="@+id/editPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:hint="@string/lbl_password"
                android:textColorHint="#FFb9b9b9"
                android:textSize="16sp"
                android:textColor="#FFFFFFFF"
                android:padding="8dp"
                android:singleLine="true"
                android:inputType="textPassword"      />
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#AAFFFFFF"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingRight="57dp"
            >
            <EditText
                android:id="@+id/editPasswordConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:hint="@string/lbl_confirm_password"
                android:textColorHint="#FFb9b9b9"
                android:textSize="16sp"
                android:textColor="#FFFFFFFF"
                android:padding="8dp"
                android:singleLine="true"
                android:inputType="textPassword"      />
             <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#AAFFFFFF"/>
            <TextView
                android:id="@+id/txt_caution"
                android:text="Password is not correct."
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="12dp"
            >
            <TextView
                android:id="@+id/editPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:hint="Phone Nunber"
                android:textColorHint="#FFb9b9b9"
                android:textSize="16sp"
                android:textColor="#FFFFFFFF"
                android:padding="8dp"
                android:singleLine="true"
                android:inputType="phone"
                android:layout_marginRight="86dp"
                />

            <CheckBox
                android:id="@+id/checkPhone"
                android:layout_toLeftOf="@+id/checkTxt"
                android:layout_centerVertical="true"


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/checkTxt"
                android:text="Random"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_button"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:layout_below="@+id/editPhone"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#AAFFFFFF"
                android:layout_marginRight="86dp"

                />

        </RelativeLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingRight="76dp"
            >
            <RadioGroup
                android:id="@+id/radioGrpGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                >
                <RadioButton
                    android:id="@+id/radioMale"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textSize="14sp"
                    android:textColor="#AAFFFFFF"
                    android:paddingLeft="20dp"
                    android:button="@drawable/ic_radio_white"
                    />
                <RadioButton
                    android:id="@+id/radioFemale"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textSize="14sp"
                    android:textColor="#AAFFFFFF"
                    android:paddingLeft="20dp"
                    android:button="@drawable/ic_radio_white"/>

            </RadioGroup>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#AAFFFFFF"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingRight="95dp"
            >
            <TextView
                android:id="@+id/txtBirthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:hint="@string/lbl_birthday"
                android:textColorHint="#FFb9b9b9"
                android:textSize="16sp"
                android:textColor="#FFFFFFFF"
                android:padding="8dp"
                android:singleLine="true"  />
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#AAFFFFFF"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingRight="95dp"
            >
            <TextView
                android:id="@+id/txtBtnSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_primary"
                android:text="@string/btn_signup_uppercase"
                android:textColor="#FFFFFFFF"
                android:gravity="center"
                android:textSize="18sp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="6dp"
                android:paddingBottom="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingRight="5dp"
            >
            <TextView
                android:id="@+id/txtBtnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="#FFFFFFFF"
                android:gravity="right"
                android:textSize="18sp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="6dp"
                android:paddingBottom="8dp"/>
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/txtWelcome"
            android:text="Welcome to use Xcolta App"
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
