<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#fbfbfb" />
            <gradient android:angle="-90" android:startColor="#d9d7d7" android:endColor="#ebe9e9"  />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4a4040" />
            <stroke android:width="1dp" android:color="#555355"/>
            <corners android:angle="90" android:radius="10dp" />
            <gradient android:angle="-90" android:startColor="#000000" android:endColor="#000000"  />
        </shape>

    </item>
</selector>