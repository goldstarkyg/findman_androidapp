<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blue_button"
    android:id="@+id/item_container">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        app:cardElevation="5dp"
        card_view:cardMaxElevation="5dp"
        card_view:cardCornerRadius="20dp"
        card_view:cardBackgroundColor="#d7d7d7"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ANDTECH WIRELESS  REPAIR"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                />


                <com.makeramen.roundedimageview.RoundedImageView
                    android:background="@drawable/light_gray_bg"
                    android:id="@+id/imgfirst"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="false"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp"
                    android:cropToPadding="false"
                    app:riv_corner_radius="15dip"
                    app:riv_border_width="0dip"
                    app:riv_border_color="#fbfbfb"
                    app:riv_mutate_background="true"
                    app:riv_oval="false"
                    />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:paddingTop="15dp"
                >

                <TextView
                    android:id="@+id/txtdescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:lines="3"
                    android:text="cellphone and electronic repairs and sales"
                    android:textAlignment="center"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/txtdate"
                    android:text = "promotion ends July 31 2017"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/txtdescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    />
                <TextView
                    android:id="@+id/txtsection"
                    android:textSize="25dp"
                    android:text="Jobs"
                    android:layout_marginBottom="0dp"
                    android:layout_below="@+id/txtdescription"
                    android:layout_toLeftOf="@+id/txtdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout
                    android:visibility="gone"
                    android:weightSum="15"
                    android:orientation="horizontal"
                    android:layout_marginBottom="0dp"
                    android:layout_below="@+id/txtdescription"
                    android:layout_toLeftOf="@+id/txtdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent">

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/dislike"
                            android:src="@drawable/icon_like_fill"
                            android:layout_width="match_parent"
                            android:layout_height="40dp" />
                        <ImageView
                            android:id="@+id/like"
                            android:src="@drawable/icon_like"
                            android:layout_width="match_parent"
                            android:layout_height="40dp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent">

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/comment"
                            android:src="@drawable/comment"
                            android:layout_width="match_parent"
                            android:layout_height="40dp" />
                        <ImageView
                            android:id="@+id/no_comment"
                            android:src="@drawable/comment_no"
                            android:layout_width="match_parent"
                            android:layout_height="40dp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent">

                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>