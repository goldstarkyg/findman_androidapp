<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blue_button"
    android:id="@+id/item_container">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"

        android:layout_marginTop="10dp"
        app:cardElevation="5dp"
        card_view:cardMaxElevation="6dp"
        card_view:cardCornerRadius="20dp"
        card_view:cardBackgroundColor="#d7d7d7"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ANDTECH WIRELESS  REPAIR"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textAllCaps="true"
                />

            <LinearLayout
                android:id="@+id/mLayImage"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:weightSum="12"
                android:baselineAligned="false">
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:layout_marginRight="8dp"
                    app:cardElevation="0dp"
                    card_view:cardMaxElevation="0dp"
                    card_view:cardCornerRadius="5dp"
                    >
                    <ImageView
                        android:background="@drawable/light_gray_bg"
                        android:id="@+id/imgTrade"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="false"
                        android:cropToPadding="false"
                        />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:layout_marginRight="8dp"
                    app:cardElevation="0dp"
                    card_view:cardMaxElevation="0dp"
                    card_view:cardCornerRadius="5dp"
                    >


                <ImageView
                    android:background="@drawable/light_gray_bg"
                    android:id="@+id/imgfirst"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="false"
                    android:cropToPadding="false"
                />
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/light_gray_bg">

                <TextView
                    android:id="@+id/txtdescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:lines="2"
                    android:text="cellphone and electronic repairs and sales"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:id="@+id/middle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtdescription"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="OPEN HOURS"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="11dp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Monday - Friday"
                            android:textAlignment="center"
                            android:textSize="11dp"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/txtopentime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="9.00 AM - 6:00 PM"
                            android:textAlignment="center"
                            android:textSize="11dp"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Saturday"
                            android:textAlignment="center"
                            android:textSize="11dp"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/txt_open_sat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="10:00 AM - 3:00 PM"
                            android:textAlignment="center"
                            android:textSize="11dp"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/txt_open_sun_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Sunday"
                            android:textAlignment="center"
                            android:textSize="11dp"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/txt_open_sun"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="10:00 AM - 3:00 PM"
                            android:textAlignment="center"
                            android:textSize="11dp"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/lay_link"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_phone_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:text="(987) 234 2345"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="16dp" />
                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_below="@+id/txt_phone_number"
                            android:id="@+id/txt_distance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="6mile"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_below="@+id/middle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:weightSum="15"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="match_parent">

                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/dislike"
                                    android:src="@drawable/icon_like_fill"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp" />
                                <ImageView
                                    android:id="@+id/like"
                                    android:src="@drawable/icon_like"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent">

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/comment"
                                    android:src="@drawable/comment"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp" />
                                <ImageView
                                    android:id="@+id/no_comment"
                                    android:src="@drawable/comment_no"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="match_parent">

                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:weightSum="12">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="2dp"
                                android:layout_weight="3">

                                <ImageView
                                    android:visibility="gone"
                                    android:id="@+id/img_twitter_g"
                                    android:layout_width="40dp"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/tw_ico_g" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="2dp"
                                android:layout_weight="3">

                                <ImageView
                                    android:visibility="gone"
                                    android:id="@+id/img_google_plus_g"
                                    android:layout_width="40dp"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/gp_icon_g" />
                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="2dp"
                                android:layout_weight="3">

                                <ImageView
                                    android:visibility="gone"
                                    android:id="@+id/img_fb_g"
                                    android:layout_width="40dp"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/fb_icon_g" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="2dp"
                                android:layout_weight="3">

                                <ImageView
                                    android:visibility="gone"
                                    android:id="@+id/img_map_g"
                                    android:layout_width="40dp"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/map_ico_g" />
                            </RelativeLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:weightSum="12">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="2dp"
                                android:layout_weight="3">

                                <ImageView
                                    android:id="@+id/img_twitter"
                                    android:layout_width="40dp"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/tw_icon" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="2dp"
                                android:layout_weight="3">

                                <ImageView
                                    android:id="@+id/img_google_plus"
                                    android:layout_width="40dp"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/gp_icon" />
                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="2dp"
                                android:layout_weight="3">

                                <ImageView
                                    android:id="@+id/img_fb"
                                    android:layout_width="40dp"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/fb_icon" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="2dp"
                                android:layout_weight="3">

                                <ImageView
                                    android:id="@+id/img_map"
                                    android:layout_width="40dp"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/map_icon" />
                            </RelativeLayout>

                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>